<?xml version="1.0" encoding="ISO-8859-1"?>
<OpenGeoSysProject>
    <meshes>
        <mesh>cube_bulk.vtu</mesh>
        <mesh>cube_x0_surface.vtu</mesh>
        <mesh>cube_x10_surface.vtu</mesh>
        <mesh>cube_y0_surface.vtu</mesh>
        <mesh>cube_y10_surface.vtu</mesh>
        <mesh>cube_z0_surface.vtu</mesh>
        <mesh>cube_z10_surface.vtu</mesh>
        <mesh>cube_source.vtu</mesh>
    </meshes>
    <processes>
        <process>
            <name>HT</name>
            <type>THERMO_RICHARDS_FLOW</type>
            <integration_order>2</integration_order>
            <process_variables>
                <temperature>temperature</temperature>
                <pressure>pressure</pressure>
            </process_variables>
            <specific_body_force>0 0 0</specific_body_force>
            <secondary_variables>
                <secondary_variable internal_name="saturation" output_name="saturation"/>
                <secondary_variable internal_name="velocity" output_name="darcy_velocity"/>
            </secondary_variables>
        </process>
    </processes>
    <media>
        <medium id="0">
            <phases>
                <phase>
                    <type>AqueousLiquid</type>
                    <properties>
                        <property>
                            <name>bulk_modulus</name>
                            <type>Constant</type>
                            <value>4.333333333333334e8</value>
                        </property>
                        <property>
                            <name>specific_heat_capacity</name>
                            <type>Constant</type>
                            <value>4065.12</value>
                        </property>
                        <property>
                            <name>thermal_conductivity</name>
                            <type>Constant</type>
                            <value>0.63</value>
                        </property>
                        <property>
                            <name>density</name>
                            <type>Linear</type>
                            <reference_value>999.1</reference_value>
                            <independent_variable>
                                <variable_name>temperature</variable_name>
                                <slope>-3.98e-4</slope>
                                <reference_condition>293.15</reference_condition>
                            </independent_variable>
                        </property>
                         <property>
                            <name>thermal_expansivity</name>
                            <type>Constant</type>
                            <value>3.98e-4</value>
                        </property>
                        <property>
                            <name>viscosity</name>
                            <type>Constant</type>
                            <value>1.0e-3</value>
                        </property>
                    </properties>
                </phase>
                <phase>
                    <type>Solid</type>
                    <properties>
                        <property>
                            <name>bulk_modulus</name>
                            <type>Constant</type>
                            <value>1.0e100</value>
                        </property>
                        <property>
                            <name>density</name>
                            <type>Constant</type>
                            <value>2300.0</value>
                        </property>
                        <property>
                            <name>thermal_conductivity</name>
                            <type>Parameter</type>
                            <parameter_name>conduct</parameter_name>
                        </property>
                        <property>
                            <name>specific_heat_capacity</name>
                            <type>Constant</type>
                            <value>995.9</value>
                        </property>
                        <property>
                            <name>thermal_expansivity</name>
                            <type>Constant</type>
                            <value>1.7e-5</value>
                        </property>
                    </properties>
                </phase>
            </phases>
            <properties>
                <property>
                    <name>permeability</name>
                    <type>Parameter</type>
                    <parameter_name>perm</parameter_name>
                </property>
                <property>
                    <name>relative_permeability</name>
                    <type>Constant</type>
                    <value>1</value>
                </property>
                <property>
                    <name>saturation</name>
                    <type>Constant</type>
                    <value>1</value>
                </property>
                <property>
                    <name>bishops_effective_stress</name>
                    <type>BishopsSaturationCutoff</type>
                    <cutoff_value>1.1</cutoff_value>
                </property>
                <property>
                    <name>biot_coefficient</name>
                    <type>Constant</type>
                    <value>0.6</value>
                </property>
                <property>
                    <name>porosity</name>
                    <type>Constant</type>
                    <value>0.13</value>
                </property>
                <property>
                    <name>thermal_expansivity_correction</name>
                    <type>Constant</type>
                        <!-- (-1.4e-6*3) //-->
                    <value>-3.06e-5</value>
                </property>
                <property>
                    <name>storage_correction</name>
                    <type>Constant</type>
                        <!-- \alpha_B^2/K //-->
                    <value>0.405e-10</value>
                </property>
            </properties>
        </medium>
    </media>
    <time_loop>
        <processes>
            <process ref="HT">
                <nonlinear_solver>basic_newton</nonlinear_solver>
                <convergence_criterion>
                    <type>DeltaX</type>
                    <norm_type>NORM2</norm_type>
                    <reltol>1.e-7</reltol>
                </convergence_criterion>
                <time_discretization>
                    <type>BackwardEuler</type>
                </time_discretization>
                <time_stepping>
                    <type>FixedTimeStepping</type>
                    <t_initial> 0.0 </t_initial>
                    <t_end> 10000000 </t_end>
                    <timesteps>
                        <pair>
                            <repeat>200</repeat>
                            <delta_t>50000</delta_t>
                        </pair>
                    </timesteps>
                </time_stepping>
            </process>
        </processes>
        <output>
            <type>VTK</type>
            <prefix>TRF-point_heatsource</prefix>
            <timesteps>
                <pair>
                    <repeat> 100 </repeat>
                    <each_steps> 1 </each_steps>
                </pair>
            </timesteps>
            <variables>
                <variable>temperature</variable>
                <variable>pressure</variable>
            </variables>
        </output>
    </time_loop>
    <local_coordinate_system>
        <basis_vector_0>e0</basis_vector_0>
        <basis_vector_1>e1</basis_vector_1>
        <basis_vector_2>e2</basis_vector_2>
    </local_coordinate_system>
    <parameters>
        <parameter>
            <name>e0</name>
            <type>Constant</type>
                    <!--<values>-0.819152   0.0  -0.573576</values>-->
            <values>1.0 0.0 0.0</values>
        </parameter>
        <parameter>
            <name>e1</name>
            <type>Constant</type>
                    <!--<values>-0.0       -1.0   0.0</values>-->
            <values>0.0 1.0 0.0</values>
        </parameter>
        <parameter>
            <name>e2</name>
            <type>Constant</type>
                    <!--<values>-0.573576   0.0   0.819152</values>-->
            <values>0.0 0.0 1.0</values>
        </parameter>
        <parameter>
            <name>perm</name>
            <type>Constant</type>
            <!--<values>5e-20 0 0 0 5e-20 0 0 0 1e-20</values>//-->
            <values>5e-20 0 0 0 5e-20 0 0 0 5e-20</values>
            <use_local_coordinate_system>true</use_local_coordinate_system>
        </parameter>
        <parameter>
            <name>conduct</name>
            <type>Constant</type>
            <!--<values>2.4 0 0 0 2.4 0 0 0 1.3</values>//-->
            <values>2.4 0 0 0 2.4 0 0 0 2.4</values>
            <use_local_coordinate_system>true</use_local_coordinate_system>
        </parameter>
        <parameter>
            <name>alpha_l</name>
            <type>Constant</type>
            <value>0.0</value>
        </parameter>
        <parameter>
            <name>alpha_t</name>
            <type>Constant</type>
            <value>0.0</value>
        </parameter>
        <parameter>
            <name>temperature0</name>
            <type>Constant</type>
            <value>293.15</value>
        </parameter>
        <parameter>
            <name>pressure_ic</name>
            <type>Constant</type>
            <values>0</values>
        </parameter>
        <parameter>
            <name>dirichlet0</name>
            <type>Constant</type>
            <value>0</value>
        </parameter>
        <parameter>
            <name>temperature_source_term</name>
            <type>Constant</type>
            <value>87.5</value>
        </parameter>
    </parameters>
    <process_variables>
        <process_variable>
            <name>temperature</name>
            <components>1</components>
            <order>1</order>
            <initial_condition>temperature0</initial_condition>
            <boundary_conditions>
                <boundary_condition>
                    <mesh>cube_x10_surface</mesh>
                    <type>Dirichlet</type>
                    <component>0</component>
                    <parameter>temperature0</parameter>
                </boundary_condition>
                <boundary_condition>
                    <mesh>cube_y10_surface</mesh>
                    <type>Dirichlet</type>
                    <component>0</component>
                    <parameter>temperature0</parameter>
                </boundary_condition>
                <boundary_condition>
                    <mesh>cube_z10_surface</mesh>
                    <type>Dirichlet</type>
                    <component>0</component>
                    <parameter>temperature0</parameter>
                </boundary_condition>
            </boundary_conditions>
            <source_terms>
                <source_term>
                    <mesh>cube_source</mesh>
                    <type>Nodal</type>
                    <component>0</component>
                    <parameter>temperature_source_term</parameter>
                </source_term>
            </source_terms>
        </process_variable>
        <process_variable>
            <name>pressure</name>
            <components>1</components>
            <order>1</order>
            <initial_condition>pressure_ic</initial_condition>
            <boundary_conditions>
                <!--<boundary_condition>
                    <mesh>single_cube_x10_surface_U3</mesh>
                    <type>Dirichlet</type>
                    <component>0</component>
                    <parameter>dirichlet0</parameter>
                </boundary_condition>
                <boundary_condition>
                    <mesh>single_cube_y10_surface_U3</mesh>
                    <type>Dirichlet</type>
                    <component>0</component>
                    <parameter>dirichlet0</parameter>
                </boundary_condition>
                <boundary_condition>
                    <mesh>single_cube_z10_surface_U3</mesh>
                    <type>Dirichlet</type>
                    <component>0</component>
                    <parameter>dirichlet0</parameter>
                </boundary_condition>//-->
            </boundary_conditions>
        </process_variable>
    </process_variables>
    <nonlinear_solvers>
        <nonlinear_solver>
            <name>basic_newton</name>
            <type>Newton</type>
            <max_iter>1000</max_iter>
            <linear_solver>general_linear_solver</linear_solver>
        </nonlinear_solver>
    </nonlinear_solvers>
    <linear_solvers>
        <linear_solver>
            <name>general_linear_solver</name>
            <lis>-i bicgstab -p jacobi -tol 1e-12 -maxiter 10000</lis>
            <petsc>
                <prefix>T</prefix>
                <parameters> -T_ksp_type bcgs -T_pc_type bjacobi  -T_ksp_rtol 1e-16 -T_ksp_max_it 4000</parameters>
            </petsc>
            <eigen>
                <solver_type>PardisoLU</solver_type>
                <precon_type>DIAGONAL</precon_type>
                <max_iteration_step>10000</max_iteration_step>
                <error_tolerance>1e-16</error_tolerance>
                    <!--<scaling>1</scaling>-->
            </eigen>
        </linear_solver>
    </linear_solvers>
</OpenGeoSysProject>
